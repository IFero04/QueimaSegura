<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.queimasegura">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QueimaSegura">
        <activity
            android:name=".common.CompleteInfoActivity"
            android:exported="false" />
        <activity
            android:name=".user.UserActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".common.reqPerm.RequestActivity"
            android:exported="true"
            android:label="@string/title_activity_request"
            android:theme="@style/Theme.QueimaSegura" />
        <activity
            android:name=".common.IntroSliderActivity"
            android:exported="false" />
        <activity
            android:name=".common.login.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".common.RegisterActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>